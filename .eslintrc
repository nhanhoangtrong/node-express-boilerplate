{
    "extends": "eslint:recommended",
    "env": {
        "node": true,
        "es6": true,
        "jest": true
    },
    "parserOptions": {
        "ecmaVersion": 8,
        "sourceType": "module",
        "ecmaFeatures": {
            "arrowFunctions": true
        }
    },
    "rules": {
        "semi": ["error", "always"]
    }
}
